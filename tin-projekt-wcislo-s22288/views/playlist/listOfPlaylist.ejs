    <main>
        <h2>Dostepne playlisty</h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Długość</th>
                    <th>ocena</th>
                    <th>Data utworzenia</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                <% for(let plali of playlists) { %>
                    <tr>
                        <td>
                            <%= plali.playlist_title %>
                        </td>
                        <td>
                            <%= plali.playlist_length %>
                        </td>
                        <td>
                            <%= plali.playlist_rating %>
                        </td>
                        <td>
                            <%= plali.playlist_creation_date %>
                        </td>
                        <td>
                            <ul class="list-actions">
                                <li>
                                    <a class="list-actions-button-details"
                                        href="/playlists/details/<%= plali.playlist_id %>">Szczegóły</a>
                                </li>
                                <li>
                                    <a class="list-actions-button-edit"
                                        href="/playlists/edit/<%= plali.playlist_id %>">Edytuj</a>
                                </li>
                                <li>
                                    <a class="list-actions-button-delete"
                                        href="/playlists/delete/<%= plali.playlist_id %>">Usuń</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                    <% } %>
