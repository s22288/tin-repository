<%- include('../fragments/header.ejs') %>

    <main>
        <h2>Lista filmów</h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th>Movie Name</th>
                    <th>Lenght</th>
                    <th>Ocena</th>
                    <th>zdjecie</th>
                    <th>filmik</th>
                    <th>Akcje</th>

                </tr>
            </thead>
            <tbody>
                <% for(let mov of movies) { %>
                    <tr>
                        <td>
                            <%= mov.movie_name %>
                        </td>
                        <td>
                            <%= mov.movie_length %>
                        </td>
                        <td>
                            <%= mov.movie_rating %>
                        </td>
                        <td><img src="<%= mov.photo_link %>" alt="Italian Trulli"></td>
                        <td>
                            <%= mov.movie_link %>
                        </td>


                        <td>
                            <ul class="list-actions">
                                <li>
                                    <a href="/movies/details/<%=mov.movie_id%>"
                                        class="list-actions-button-details">Szczegóły</a>
                                </li>
                                <li>
                                    <a href="/movies/edit/<%=mov.movie_id%>" class="list-actions-button-edit">Edytuj</a>

                                </li>
                                <li>
                                    <a href="/movies/delete/<%=mov.movie_id%>" class="list-actions-button-delete"
                                        href="">Usuń</a>
                                </li>

                            </ul>


                        </td>

                    </tr>
                    <% } %>

            </tbody>


        </table>


