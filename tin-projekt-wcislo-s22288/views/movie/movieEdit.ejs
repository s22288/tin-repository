<%- include('../fragments/header.ejs') %>

    <main>
        <h2>Edycja Filmu</h2>
        <form class="form" novalidate onsubmit="return validateForm();">
            <label for="moviename">Nazwa filmu: *</label>
            <input type="text" name="moviename" id="moviename" value="Gwiezdne wojny" required>
            <span id="errorMovieName"></span>


            <label for="movieLength">Długość filmu: *</label>
            <input type="text" name="length" id="movieLength" value="200" required>
            <span id="errorMovieLength"></span>


            <label for="rating">Ocena filmu: *</label>
            <input type="text" name="rating" id="rating" value="3" required>
            <span id="errorRating"></span>


            <label for="linktomovie">Link do filmu: *</label>
            <input type="text" name="linktomovie" id="linktomovie" value="https://www.youtube.com/watch?v=VkGqqMsaOGA"
                required>
            <span id="errorLinkToMovie"></span>


            <label for="linktophoto">Link do zdjecia: *</label>
            <input type="text" name="linktophoto" id="linktophoto"
                value="https://amc-theatres-res.cloudinary.com/image/upload/f_auto,fl_lossy,h_465,q_auto,w_310/v1663085107/amc-cdn/production/2/movies/62300/62331/PosterDynamic/142915.jpg"
                required>
            <span id="errorLinkToPhoto"></span>

            <div class="form-buttons">
                <p id="errorsSummary"></p>
                <input class="form-button-submit" type="submit" value="Dodaj" />
                <a class="form-button-cancel" href="listOfMovies.html">Anuluj</a>
            </div>

        </form>
    </main>
    <%- include('../fragments/footer.ejs') %>